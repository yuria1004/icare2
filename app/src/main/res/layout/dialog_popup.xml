<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/img_wroundbox"
        android:orientation="vertical"
        android:padding="0dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:gravity="center"
            android:text="사진 등록"
            android:textColor="#333333"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/gray_line" />

        <Button
            android:id="@+id/album_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/selector_popup_bg"
            android:text="사진 앨범에서 선택"
            android:textColor="@drawable/selector_popup_text_color"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/gray_line" />

        <Button
            android:id="@+id/default_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/selector_popup_bg"
            android:text="기본 이미지로 변경"
            android:textColor="@drawable/selector_popup_text_color"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/gray_line" />

        <Button
            android:id="@+id/close_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            android:text="취소"
            android:textColor="@drawable/selector_popup_text_color"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>